{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web App: Chrome (app/)",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:8080/",
            "webRoot": "${workspaceFolder}/app",
            "preLaunchTask": "Serve app (http.server)"
        },
        {
            "name": "Python: Auto Blueprint Full",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/auto_blueprint_full.py",
            "args": ["--input-dir", "framework", "--output-dir", "blueprints"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Convert Raw to JSON",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/convert_raw_to_json.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-q"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}
