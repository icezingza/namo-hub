{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve app (http.server)",
            "type": "shell",
            "command": "python",
            "args": ["-m", "http.server", "8080"],
            "options": {
                "cwd": "${workspaceFolder}/app"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".+"
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting|Serving HTTP on",
                    "endsPattern": "Serving HTTP on"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": false
            }
        }
    ]
}
